<%= render 'layouts/navbar' %>
<h1>Edit Workout</h1>

<%= form_for @workout, url: user_workouts_path(@user) do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br />

 Optional <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.fields_for Routine.new do |builder| %>
	  	<%= builder.label :name %><br />
	  	<%= builder.text_area :name %>

	  	<%= builder.label :reps %><br />
	  	<%= builder.text_area :reps %>

	  	<%= builder.label :weight %><br />
	  	<%= builder.text_area :weight %>

	  	<%= builder.check_box :_destroy %><br />
	  	<%= builder.label :_destroy, "Delete" %>

  <% end %>

<!-- AJAX when title is made and add exercise or show hide or on submit new exercise form shows -->

  <%= f.submit "Update Workout" %>
<% end %>
