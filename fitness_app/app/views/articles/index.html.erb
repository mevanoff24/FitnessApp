

<h1>ALL ARTICLES</h1>

<%= link_to "Create Workout Routine", new_user_workout_path(@user) %>
<%= link_to "All Your Workouts", user_workouts_path(@user) %>

<div class="row">
	<div class="col span_3">
		<h2>Workout Articles</h2>
		<h3><%= link_to "See All", catindex_path(1) %></h3>
		<div><% @workout_articles.each do |article| %>
			<%= link_to article.title, article_path(article) %></br>
			<div height="100px" class="index-image"><img src="<%= article.image %>" height="100" width="180"></div>
			<%= article.tag %></br>
			<%= article.date %></br>
			<%= article.author %></br>
		</br>
		<% end %>
	</div>
</div>

